{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <div class="container-fluid">
        <a class="text-success" href="{{ path('user_index') }}"><i class="fa fa-angle-double-left">  Retour</i></a>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="container text-center my-3">
                <h1>Utilisateur #{{ user.id }}</h1>
            </div>
            <div class="container">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="container">
                <a class="btn btn-success" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
