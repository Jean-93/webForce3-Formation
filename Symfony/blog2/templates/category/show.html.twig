{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container-fluid">
        <a href="{{ path('category_index') }}" class="text-danger"><i class="fa fa-angle-double-left mr-1"></i>Retour Ã  la liste</a>

        <h1>Categorie : </h1>

        <div class="container">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ category.title }}</td>
                    </tr>
                    <tr>
