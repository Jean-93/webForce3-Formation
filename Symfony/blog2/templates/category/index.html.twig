{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1>Liste de toutes les cat√©gories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="text-danger mx-1"><i class="fa fa-search"></i></a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="text-danger mx-1"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-danger">Create new</a>
</div>
{% endblock %}
