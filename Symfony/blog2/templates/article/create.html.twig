{# templates/articles/create.html.twig #}

{% extends "base.html.twig" %}

{% block title %} Blog - Articles {% endblock %}

{% block body %}

    <h1> Page de création d'un article</h1>

    <form action="{{ path('article_new')}}" method="post">

        <div class="form-group">
            <label for="title">Titre de l'article</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="title" id="title">
            </div>
        </div>

        <div class="form-group">
            <label for="short_content">Résumé de l'article</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="short_content" id="short_content">
            </div>
        </div>

        <div class="form-group">
            <label for="content">Rédigez votre Article ici </label>
            <div class="col-sm-10">
                <textarea class="form-control" name="content" id="content" rows="3"></textarea>
            </div>
        </div>

        <input type="submit" value="Enregistrer">

    </form>

{% endblock %}